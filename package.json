{
  "name": "Lagoon SDKs",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:packages",
    "build:packages": "bun run build:core && bun run build:viem && bun run build:computation",
    "build:core": "bun run --cwd packages/v0-core build",
    "build:viem": "bun run --cwd packages/v0-viem build",
    "build:computation": "bun run --cwd packages/v0-computation build",
    "dev": "bun run --watch index.ts",
    "clean": "rm -rf packages/*/dist"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "dependencies": {
    "@lagoon-protocol/v0-core": "workspace:*",
    "@lagoon-protocol/v0-viem": "workspace:*"
  }
}
