{
  "name": "@lagoon-protocol/v0-core",
  "description": "Framework-agnostic package that defines Lagoon related entity classes (such as Vault)",
  "version": "0.1.2",
  "license": "MIT",
  "type": "module",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "../../LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
