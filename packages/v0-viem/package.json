{
  "name": "@lagoon-protocol/v0-viem",
  "description": "Viem based package that defines Lagoon utilities for vault core classes",
  "version": "0.1.3",
  "license": "MIT",
  "type": "module",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "../../LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && bun build ./src/index.ts --outdir ./dist --target node --format esm",
    "test": "vitest",
    "dev": "bun run --watch src/index.ts"
  },
  "devDependencies": {
    "@lagoon-protocol/v0-core": "workspace:^",
    "@morpho-org/test": "^2.1.4",
    "@types/bun": "latest",
    "typescript": "^5",
    "viem": "^2.0.0",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "@lagoon-protocol/v0-core": "workspace:^",
    "viem": "^2.0.0"
  },
  "private": false,
  "publishConfig": {
    "tag": "next",
    "main": "lib/index.js",
    "types": "lib/index.d.ts"
  }
}
